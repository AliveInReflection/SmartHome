<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHome.Mobile.Pages.TokenTab">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" x:Name="BarCodeImage" WidthRequest="300" HeightRequest="300"/>
            <Button Grid.Row="1"  x:Name="BarCodeGenerateButton" Text="Generate" Clicked="Button_OnClicked" VerticalOptions="End"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>